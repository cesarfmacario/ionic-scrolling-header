{
    "compilerOptions": {
        "declaration": true,
        "target": "es2015",
        "module": "es2015",
        "baseUrl": ".",
        "sourceMap": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "../tmp/es2015",
        "rootDir": ".",
        "skipLibCheck": true,
        "lib": ["es2015", "dom"]
    },
    "files": ["./public_api.ts"],
    "angularCompilerOptions": {
        "annotateForClosureCompiler": true,
        "strictMetadataEmit": true,
        "skipTemplateCodegen": true,
        "flatModuleOutFile": "ionic-scrolling-header.js",
        "flatModuleId": "ionic-scrolling-header"
    },
    "exclude": [
        "node_modules",
        "dist",
        "gh-pages",
        "**/*.ngfactory.ts",
        "**/*.shim.ts",
        "**/*.spec.ts"
    ]
}